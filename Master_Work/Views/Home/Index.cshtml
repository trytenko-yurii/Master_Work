@{
    ViewData["Title"] = "The News";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>

    <main class="content">
        <section class="articles">
            <div class="article">
                <img src="path/to/image1.jpg" alt="Article Image">
                <h2>A more disciplined Trump operation faces fresh headaches from outside allies and the candidate himself</h2>
                <p>Senior Trump campaign advisor Chris LaCivita called the newest team member...</p>
                <span class="date">Wed December 27, 2023</span>
            </div>

            <div class="article">
                <img src="path/to/image2.jpg" alt="Article Image">
                <h2>An unprecedented UFO report and other moments from 2023 that rivaled science fiction</h2>
                <p>With SpaceX's Mars rocket erupting into a ball of flames over the ocean...</p>
                <span class="date">Wed December 27, 2023</span>
            </div>

            <!-- Add other articles in similar structure -->
        </section>

        <aside class="sidebar">
            <h2>World</h2>
            <span class="date">Wed December 27, 2023</span>
            <div class="sidebar-article">
                <img src="path/to/image3.jpg" alt="Sidebar Image">
                <p>Microsoft's Satya Nadella is CNN Business' CEO of the Year...</p>
                <span class="date">Wed December 27, 2023</span>
            </div>
            <!-- Add other sidebar articles similarly -->
        </aside>
    </main>
</body>
</html>
