
@{
    ViewData["Title"] = "Register";
}

<div style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 85vh; font-family: Arial, sans-serif; background-color: #fafafa; overflow: hidden;">
    <!-- Блок формы регистрации -->
    <div style="width: 350px; padding: 20px; background-color: white; border: 1px solid #dbdbdb; border-radius: 5px; text-align: center; box-sizing: border-box;">
        <h1 style="font-family: 'Billabong', cursive; font-size: 40px; margin-bottom: 20px;">Sign Up</h1>

        <!-- Форма регистрации -->
        <form method="post" action="/Home/Register">
            <div style="margin-bottom: 10px;">
                <input type="text" name="FirstName" placeholder="First Name"
                       style="width: 80%; padding: 8px; border: 1px solid #dbdbdb; border-radius: 3px; background-color: #fafafa; font-size: 14px;">
            </div>
            <div style="margin-bottom: 10px;">
                <input type="text" name="LastName" placeholder="Last Name"
                       style="width: 80%; padding: 8px; border: 1px solid #dbdbdb; border-radius: 3px; background-color: #fafafa; font-size: 14px;">
            </div>
            <div style="margin-bottom: 10px;">
                <input type="email" name="Email" placeholder="Email"
                       style="width: 80%; padding: 8px; border: 1px solid #dbdbdb; border-radius: 3px; background-color: #fafafa; font-size: 14px;">
            </div>
            <div style="margin-bottom: 10px;">
                <input type="password" name="Password" placeholder="Password"
                       style="width: 80%; padding: 8px; border: 1px solid #dbdbdb; border-radius: 3px; background-color: #fafafa; font-size: 14px;">
            </div>
            <div style="margin-bottom: 10px;">
                <input type="password" name="ConfirmPassword" placeholder="Confirm Password"
                       style="width: 80%; padding: 8px; border: 1px solid #dbdbdb; border-radius: 3px; background-color: #fafafa; font-size: 14px;">
            </div>
            <button type="submit"
                    style="width: 85%; margin-top: 30px; padding: 8px; background-color: #0095f6; color: white; font-weight: bold; border: none; border-radius: 20px; cursor: pointer; font-size: 14px;">
                Sign Up
            </button>
        </form>

        <!-- Или -->
        <div style="display: flex; align-items: center; margin: 15px 0;">
            <div style="flex: 1; height: 1px; background-color: #dbdbdb;"></div>
            <span style="margin: 0 10px; color: #8e8e8e; font-size: 12px;">OR</span>
            <div style="flex: 1; height: 1px; background-color: #dbdbdb;"></div>
        </div>

        <!-- Линк на логин -->
        <div>
            <p style="font-size: 12px; color: #8e8e8e;">Already have an account? <a href="#" style="color: #0095f6;" onclick="window.location.href='/Home/LogIn';">Log in</a></p>
        </div>
    </div>
</div>


